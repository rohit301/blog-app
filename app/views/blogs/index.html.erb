

<h1>Blogs</h1>

<%= form_tag('/blogs', method: :get) do %>

 <div class="field">
    <%= label_tag :user_id %>
    <%= select_tag :user_id, options_for_select(User.all.map{|s|[s.email, s.id]},params[:user_id])%>
    <%= submit_tag :filter %>
    </div>
     <% end %> 

<table>
<thead>
 <% if @blogs.empty? 
 flash[:notice]="No blogs have been created yet by the user." %>
 <p id="notice"><%= notice %></p>
  <% else %> 
     <tr>
      <th> Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
     
  </thead>
  <% end %>
  <tbody>
  
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<div>New User? click on   <%= link_to "Sign up", sign_up_path %> </div>
<div> Already a user? click on <%= link_to "Sign in", sign_in_path %> </div> 
